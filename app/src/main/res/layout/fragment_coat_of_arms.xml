<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".CoatOfArmsFragment"
    >

    <TextView
        android:id="@+id/coat_of_arms_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        tools:text="Москва"
        />


    <Button
        android:id="@+id/coat_of_arms_button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:text="Назад"
        />

    <Button
        android:id="@+id/coat_of_arms_button_remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:text="Remove"
        />

    <ImageView
        android:id="@+id/coat_of_arms_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="coat of arms"
        tools:src="@drawable/msc"
        />
</LinearLayout>